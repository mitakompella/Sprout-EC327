<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantbackgroundfrag4"

    tools:context=".fragment_fourth">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plant Care Data"
        android:fontFamily="@font/dancing_script"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:shadowColor="@color/yellow"
        android:shadowRadius="50.0"
        android:shadowDx="1.0"
        android:shadowDy="1.0"
        android:layout_gravity="center_horizontal"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:id="@+id/Titletxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Sun Rating"
        android:fontFamily="@font/dancing_script"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="75dp"
        android:id="@+id/sunRatingtxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="low lighting"
        android:textStyle="bold"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:id="@+id/lowLighting"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="indirect sun"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:id="@+id/indirectLighting"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="direct sun"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="95dp"
        android:id="@+id/directLighting"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:max="10"
        android:progress="0"
        android:id="@+id/sunSeekBar"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="results"
        android:layout_marginTop="150dp"
        android:id="@+id/sun_results"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Water Rating"
        android:textSize="20sp"

        android:fontFamily="@font/dancing_script"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="265dp"
        android:id="@+id/waterRatingtxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="infrequent"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="300dp"
        android:id="@+id/lowWater"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="top of soil dries out between waterings"
        android:textAlignment="center"
        android:id="@+id/mediumWater"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:text="soild never dry"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="300dp"
        android:id="@+id/bigWater"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="340dp"
        android:max="10"
        android:progress="0"
        android:id="@+id/waterSeekBar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="results"
        android:layout_marginTop="360dp"
        android:id="@+id/water_results"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Temperature Rating"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/dancing_script"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="465dp"
        android:id="@+id/tempRatingtxt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="below 50 F"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="500dp"
        android:id="@+id/lowTemp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="500dp"
        android:text="household temp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:id="@+id/mediumTemp"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="outside or above 75 F"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="500dp"
        android:textSize="15sp"
        android:fontFamily="@font/dancing_script"
        android:id="@+id/bigTemp"/>


    <SeekBar
        android:id="@+id/tempSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="550dp"
        android:max="10"
        android:progress="0"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="results"
        android:layout_marginTop="570dp"
        android:id="@+id/temp_results"/>
    



</FrameLayout>